/* pages/musicIndex/musicIndex.wxss */
.musicIndex{
  width: 100%;
  background-color: #ffffff;
}
/* 搜索栏 */
.searchBar{
  position: fixed;
  top:0;
  z-index: 1000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding-left:20rpx;
  padding-right:10rpx;
  line-height: 100rpx;
  margin: 0 auto;
  background-color: #f2f2f2;
}
.search{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 60rpx;
  border-radius: 30rpx;
  /* padding-left: 30rpx; */
  background-color: #ffffff;
}
.search text{
  font-size: 24rpx;
  line-height: 60rpx;
  color: #dddddd;
  /* margin-left:30rpx; */
}
/* banner */
.mBanner{
    position: relative;
    width: 100%;
    margin:20rpx auto 0;
    border-radius: 20rpx;
    overflow: hidden;
    background-color: #ffffff;
}
.bannerItem{
  position: relative;
}
.slide-image{
  width: 100%;
}
/* banner标志 */
.mark{
    position: absolute;
    /* width: 156rpx; */
    padding:15rpx 30rpx;
    height: 20rpx;
    line-height: 20rpx;
    font-size: 24rpx;
    color: #ffffff;
    border-radius: 20rpx 0;
    bottom: 0rpx;
    right: 0rpx;
    text-align: center;
}
/* 五宫格 */
.fiveGrid{
  width: 100%;
  margin: 30rpx auto 0;
  background-color: #ffffff;
  border-bottom: 1px solid #eeeeee;
  height: 130rpx;
  overflow: hidden;
 
}
.scrollBox{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}
/* 去除横向滚动条 */
::-webkit-scrollbar {
 width: 0;
 height: 0;
 color: transparent;
}
.grid{
  display: inline-block;
  width: 18%;
  text-align: center;
  height: 120rpx;
  /* background-color: #afa; */
  margin-left: 13rpx;
}
.gLogo{
  position: relative;
  width: 60rpx;
  height:60rpx;
  /* background-color: #aaaaff; */
  border-radius:50%;
  margin: 10rpx auto 0;
  /* z-index: -1; */
}
.gLogo image{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin:auto;
  width: 45rpx;
  height: 45rpx;
  z-index: 10;
}
.grid >text{
  font-size: 20rpx;
}
/* 推荐歌单 */
.songList{
  width: 100%;
  margin:0 auto;
}
.songList .title{
  display: flex;
  justify-content: space-between;
  margin-top:30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.title >text:nth-child(1){
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}
.title >text:nth-child(3){
  width: 130rpx;
  font-size: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border:1px solid #eeeeee;
  color: #333333;
  border-radius:25rpx;
  
}
.title >text:nth-child(2){
  width: 130rpx;
  font-size: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 200rpx;
  text-align: center;
  border:1px solid #eeeeee;
  color: #333333;
  background-color: #f2f2f2;
  border-radius:25rpx;
}
/* 推荐歌单列表 */
.list{
  width: 100%;
  height: auto;
  white-space: wrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.list .item{
  display: inline-block;
  width:29%;
  height: 260rpx;
  overflow: hidden;
  margin:20rpx 15rpx 0;
  white-space: wrap;
  text-overflow: ellipsis;
  padding-bottom: 6rpx;
  /* border: 1px solid #dddddd;   */
}
.list .item view:nth-child(1){
  width: 100%;
  height:180rpx;
  overflow: hidden;
  border-radius:10rpx;
}
.list .item view:nth-child(1)>image{
  width: 100%;
  height:180rpx;
}
.item view:nth-child(2) >text{
  text-align: center;
}
/* 新歌新碟 */
.newSontitle{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
}
.newSontitle >text{
  padding: 0 8rpx;
}
.newSontitle >text.active{
  color: #000000;
  font-weight: bold;
  font-size: 36rpx;
}
.newSontitle >text.inactive{
  font-size: 24rpx;
  color: #333333;
}
.newSontitle >text:nth-child(2){
  margin-left: 60rpx;
}
.newSontitle >view{
  float: right;
  height: 50rpx;
}
.newSontitle >view >text{
  display:inline-block;
  width: 130rpx;
  font-size: 20rpx;
  text-align: center;
  border:1px solid #eeeeee;
  color: #333333;
  border-radius:25rpx;
}