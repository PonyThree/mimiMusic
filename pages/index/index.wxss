/**index.wxss**/
.container{
  position: relative;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
  padding:20rpx;
  border-radius: 8rpx;
  color: #f66;
  border: 2px solid #aaaaff;
}
.threeLine{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 10rpx;
  top: 10rpx;

}
.threeLine image{
  width: 60rpx;
  height:60rpx;
}